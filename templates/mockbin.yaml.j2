_format_version: "3.0"
_info:
  defaults: {}
  select_tags:
    {% for tag in select_tags %}
     - {{ tag }}
    {% endfor %}
_konnect:
  runtime_group_name: {{ konnect_runtime_group }}
services:
{% for service in services %}
- connect_timeout: 60000
  enabled: true
  host: {{ service.host }}
  name: {{ service.name }}
  path: {{ service.path }}
  port: 443
  protocol: https
  read_timeout: 60000
  retries: 5
  plugins:
  {% for plugin in service.plugins %}
  - config:
      add:
        body: []
        headers:
        {% for header in plugin.config.add.headers %}
        - {{ header }}
        {% endfor %}
        querystring: []
      allow:
        body: null
      append:
        body: []
        headers: []
        querystring: []
      http_method: null
      remove:
        body: []
        headers: []
        querystring: []
      rename:
        body: []
        headers: []
        querystring: []
      replace:
        body: []
        headers: []
        querystring: []
        uri: null
    enabled: true
    name: {{ plugin.name }}
    protocols:
    - grpc
    - grpcs
    - http
    - https
  {% endfor %}
  routes:
  {% for route in service.routes %}
  - name: {{ route.name }}
    https_redirect_status_code: 426
    path_handling: v0
    paths: 
	{% for path in route.paths %}
     - {{ path }}
    {% endfor %}
    preserve_host: false
    protocols:
    - http
    - https
    regex_priority: 0
    request_buffering: true
    response_buffering: true
    strip_path: true
  tags:
  - _KonnectService:{{ service_name }}
  write_timeout: 60000
  {% endfor %}
{% endfor %}
